<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head.ejs %>
</head>

<% include partials/navbar.ejs %>

<body>
    <div class="d-flex justify-content-center">

        <div id="add" class="mr-3">
            <h1 class="text-center">Add</h1>
            <form action="/metrics" method="post" class="text-center">
                <label for="id">Id</label>
                <input type="text" id="id" class="form-control mt" name="id" />
                <label for="timestamp">Timestamp</label>
                <input type="date" id="timestamp" class="form-control" name="timestamp" />
                <label for="value">Value</label>
                <input type="number" id="value" class="form-control" name="value" />
                <input type="submit" value="Insert" class="btn btn-info btn-block my-4 mt-1" />
            </form>
        </div>
        <div id="delete"    >
            <h1 class="text-center">Delete</h1>
            <form action='/metrics/delete' method="post" class="text-center">
                <label for="id">Id</label>
                <input type="text" id="id" class="form-control mt" name="id" />
                <input type="submit" value="Delete this metric" class="btn btn-info btn-block my-4 mt-1" />
            </form>
        </div>
    </div>
</body>